beginchar(c_ref_sign_u,8uw#+rm#,20uh#,8uh#); "reformed script vowel sign u";
    pickup frame_pen;
    z1=(0uw, 20uh);
    z2=(5uw, 12uh);
    z3=(4uw, 0);
    eye(4,3,5,6)(8uw, 8uh);

    draw z1..z2{down}..z3{down};
    draw_eye(4,3,5,6);
    penlabels(1,2,3,4,6);
endchar;

beginchar(c_ref_sign_uu,9uw#+rm#,20uh#,9uh#); "reformed script vowel sign uu";
    pickup frame_pen;
    z1=(1uw, 20uh);
    z2=(6uw, 12uh);
    z3=(5uw, 0);
    eye(4',3,7,8)(9uw, 9uh);
    z4=z7-(.45uw, -2.25uh);
    z6=z4'+(1.8uw, 2.25uh);
    z5=(.5[x6,x4], y3 - 4.5uh);
    z9=z4'-(0, 1.35uh);
    
    draw z1..z2{down}..z3{down};
    draw z4..z5{left}..z6{up}..z3{right}..z7{down}..z8{left}..z9;
    penlabels(1,2,3,4,5,6,7,8,9);
endchar;

