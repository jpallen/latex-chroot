beginchar(c_sign_vocalic_rr,20uw#+rm#,0,12uh#); "U+0D44 malayalam vowel sign vocalic rr";
    pickup frame_pen;
    z1=(20uw, 0);
    z2=(x1-12uw, -12uh);
    z3=(x1-20uw, -8uh);
    z4=(x2-4uw, -5uh);
    z5=(x2, y3-2uh);
    z6=(x2+4uw, y4);
    z7=(x1-4uw, -7uh);
    draw z1{down}..z2{left}..z3{up}..z4{right}..z5{down}---z2;
