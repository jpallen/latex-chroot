draw z.l{(4dx,7dy)}..z1;
endchar;

%%%%%%%%%%%%%% hhah-spec-macros %%%%%%%%%%%%%%%%%

def hhah_spec_bar =
x1 = x2 - 9dx = x.rr;
y1 = y.rr; y2 = 0.5[y.r, y.rr];
draw z1{right}..z2{right};
r_con(rr);
enddef;

def hhah_spec_beg =
hhah_spec_bar; draw z2{left}..z.l{left};
enddef;

def hhah_spec_iso =
hhah_spec_bar; hhah_bow;
enddef;

