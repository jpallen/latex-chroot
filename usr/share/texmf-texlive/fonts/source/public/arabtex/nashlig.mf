%%%%%%%%%%%%%% sin_spec-macros %%%%%%%%%%%%%%%%%

def sin_spec_wave =
z5 - z.l = z3 - z2;
x3 - x2 = 2(x3 - x5) = 2dx; x.m := x2;
y5 = y2 - 2dy = y.l;
draw z3..z5..z2; draw z2{down}..z.l{left};
enddef;

def sin_spec_beg =
sin_spec_wave;
enddef;

def sin_spec_mid =
sin_spec_wave; r_att(3);
enddef;

def sin_spec_mid =
sin_spec_wave; draw z3{down}..z.r{right};
enddef;

%%%%%%%%%%%%%% short sin %%%%%%%%%%%%%%%%%

arabchar(sin_spec, f_mid, 6, 6, 0);
sin_spec_mid;
endchar;

arabchar(sin_spec, f_beg, 4, 6, 0);
sin_spec_beg;
endchar;

