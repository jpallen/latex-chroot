\gdef \tr@@aword #1{% transcribe rest of word 
\let \tr@old \tr@act \def \tr@act {#1}%
\case #1\of
{       >{\@gobble }
    \cap {\c@ptrue \tr@aword }
%  |"^\a@e{\tr@aword }
      |"^{\tr@aword }
        -{-\tr@aword }
    XlEeQ{\csname tr@@\string #1\endcsname }
